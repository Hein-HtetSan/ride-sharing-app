# Development Dockerfile for Spring Boot API
FROM eclipse-temurin:21-jdk-alpine

WORKDIR /app

# Install curl for health checks only
RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories
RUN apk update && apk add --no-cache curl

# Copy Maven wrapper and POM file
COPY mvnw .
COPY .mvn ./.mvn
COPY pom.xml .

# Make Maven wrapper executable and download dependencies
RUN chmod +x ./mvnw
RUN ./mvnw dependency:resolve

# Copy source code
COPY src ./src

# Expose port
EXPOSE 8080

# Development command with auto-reload
CMD ["./mvnw", "spring-boot:run", "-Dspring-boot.run.jvmArguments=-Dspring.profiles.active=dev"]
